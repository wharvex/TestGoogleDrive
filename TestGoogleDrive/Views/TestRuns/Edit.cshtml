@model TestGoogleDrive.Models.TestRun

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TestRun</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="streamLocation" id="streamLocation1" asp-for="StreamLoc">
                    @Html.DisplayNameFor(model => model.Syncing)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Syncing"/> @Html.DisplayNameFor(model => model.Syncing)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AppearsExactlyOnce"/> @Html.DisplayNameFor(model => model.AppearsExactlyOnce)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NotUnderPlainDrives"/> @Html.DisplayNameFor(model => model.NotUnderPlainDrives)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OpensMyDriveDirectly"/> @Html.DisplayNameFor(model => model.OpensMyDriveDirectly)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}